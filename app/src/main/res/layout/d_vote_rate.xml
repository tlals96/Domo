<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/cardMarginVertical"
                                    android:layout_marginLeft="@dimen/cardMarginHorizontal"
                                    android:layout_marginRight="@dimen/cardMarginHorizontal"
                                    android:layout_marginTop="@dimen/cardMarginVertical"
                                    android:background="@null"
                                    app:cardCornerRadius="4dp"
                                    app:cardElevation="2dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:contentPadding="15dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    <com.andexert.library.RippleView
        android:id="@+id/rateRippleFuck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        app:rv_color="@null"
        app:rv_zoom="true">

      <com.gms.gms_meal.lib.FontAwesomeText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:textSize="70dp"
          android:textColor="#dc143c"
          app:fa_icon="fa-lightbulb-o"></com.gms.gms_meal.lib.FontAwesomeText>

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/rateRippleShit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        app:rv_color="@null"
        app:rv_zoom="true">

      <com.gms.gms_meal.lib.FontAwesomeText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:textSize="70dp"
          android:textColor="#ff8c00"
          app:fa_icon="fa-lightbulb-o"></com.gms.gms_meal.lib.FontAwesomeText>

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/rateRippleSoso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        app:rv_color="@null"
        app:rv_zoom="true">

      <com.gms.gms_meal.lib.FontAwesomeText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:textSize="70dp"
          android:textColor="#ffd700"
          app:fa_icon="fa-lightbulb-o"></com.gms.gms_meal.lib.FontAwesomeText>

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/rateRippleGood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        app:rv_color="@null"
        app:rv_zoom="true">

      <com.gms.gms_meal.lib.FontAwesomeText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:textSize="70dp"
          android:textColor="#A8F552"
          app:fa_icon="fa-lightbulb-o"></com.gms.gms_meal.lib.FontAwesomeText>

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/rateRippleWell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@null"
        app:rv_color="@null"
        app:rv_zoom="true">

      <com.gms.gms_meal.lib.FontAwesomeText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:textSize="70dp"
          android:textColor="#4169e1"
          app:fa_icon="fa-lightbulb-o"></com.gms.gms_meal.lib.FontAwesomeText>

    </com.andexert.library.RippleView>


  </LinearLayout>
</android.support.v7.widget.CardView>

